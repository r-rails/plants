-# list of all

.container
  .pb-4.border-b
    = search_form_for @q do |f|
      .font-serif.text-xl Search for a plant
      = f.label 'Latin or Name Contains:', :class => 'font-serif text-xl'
      = f.search_field :name_or_latin_cont, :class => 'text-field'
      = f.submit 'Search', :class => 'btn-primary'
  
  .flex.p-2.mt-4= paginate @plants

  %table.w-full.mt-4
    %tr.border-b.font-serif
      %th
        .flex.text-left.font-semibold latin
      %th
        .flex.text-left.font-semibold name
      %th
        .flex.text-left.font-semibold ideallight
      %th
        .flex.text-left.font-semibold watering
      %th
        .flex.text-left.font-semibold climate
      %th
        .flex.text-left.font-semibold category

    - @plants.each do |plant|
      %tr.bg-white.odd:bg-gray-100.hover:text-green-700
        %td.p-2.hover:underline= link_to plant.latin, plant
        %td.p-2= link_to plant.name, plant
        %td= plant.ideallight
        %td= plant.watering
        %td= plant.climate
        %td= plant.category

  .flex.p-2= paginate @plants