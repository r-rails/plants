.max-w-5xl.mx-auto.lg:grid.grid-cols-1.lg:grid-cols-12.gap-x-12.gap-y-4.relative.z-20
  .lg:col-span-12.text-center
    .flex.justify-center.mb-4
      = image_tag "plant_logo.png", size: "200"
    %h1.mb-4.text-5xl.font-semibold.text-gray-800.text-center.mt-3 PlantzApp
    %p.leading-snug.text-gray-700.text-lg.max-w-3xl.mx-auto.pb-6 Find new house plants, ask the community and get personalized watering reminders.

  .lg:col-span-12.mb-5
    %h2.font-semibold.text-2xl.mb-4 House plants
    %ul.flex.flex-wrap.items-end.text-sm.font-medium.text-center.text-white.border-b-2.border-emerald-600
      %li.mr-2
        = link_to 'Most Recent', most_recent_plants_path, class: 'house-plant-tabs inline-block p-4 text-black hover:underline bg-emerald-400', data: { turbo_frame: 'house_plant_tabs', controller: 'tabclick', action: 'tabclick#swapclass' }
      %li.mr-2
        = link_to 'Top 10', top_ten_plants_path, class: 'house-plant-tabs inline-block p-4 text-black bg-emerald-200 hover:underline', data: { turbo_frame: 'house_plant_tabs', controller: 'tabclick', action: 'tabclick#swapclass' }
      %li.mr-2
        = link_to 'Categories', plants_category_path, class: 'house-plant-tabs inline-block p-4 text-black bg-emerald-200 hover:underline', data: { turbo_frame: 'house_plant_tabs', controller: 'tabclick', action: 'tabclick#swapclass' }
      %li.ml-auto
        = search_form_for @q do |f|
          .block.p-3.pr-0.w-full.text-sm.text-gray-900
            = f.search_field :name_or_latin_cont, placeholder: 'Search for a plant', class: "rounded focus:ring-2 focus:outline-none focus:ring-emerald-500"
            = f.button do
              %svg.mr-2{fill: "#047857", height: "22", version: "1.1", viewbox: "0 0 26 28", width: "26", xmlns: "http://www.w3.org/2000/svg"}
                %path{d: "M18 13c0-3.859-3.141-7-7-7s-7 3.141-7 7 3.141 7 7 7 7-3.141 7-7zM26 26c0 1.094-0.906 2-2 2-0.531 0-1.047-0.219-1.406-0.594l-5.359-5.344c-1.828 1.266-4.016 1.937-6.234 1.937-6.078 0-11-4.922-11-11s4.922-11 11-11 11 4.922 11 11c0 2.219-0.672 4.406-1.937 6.234l5.359 5.359c0.359 0.359 0.578 0.875 0.578 1.406z"}
    = render "plants/carousel_for_plants", plants: @most_recent_plants   

  .lg:col-span-12
    %h2.font-semibold.text-2xl.mb-4 Community
    %ul.flex.flex-wrap.items-end.text-sm.font-medium.text-center.text-white.border-b-2.border-emerald-600
      %li.mr-2
        %a.inline-block.p-4.bg-emerald-700.active:bg-emerald-700{"aria-current" => "page", href: "#"} All
      %li.mr-2
        %a.inline-block.p-4.text-black.bg-emerald-300.hover:bg-emerald-400{href: "#"} Popular topics

      %li.ml-auto
        = link_to "Top growers", top_growers_path, class: "inline-block p-4 text-black bg-emerald-300 hover:bg-emerald-400 text-base"


