.container
  .font-serif.mb-4.text-2xl Edit #{resource_name.to_s.humanize}
  
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", :class => 'text-field'
    .field
      = f.label :username
      %i (visible for everyone)
      %br/
      = f.text_field :username, autofocus: true, :class => 'text-field'
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .field
      = f.label :password
      %i (leave blank if you don't want to change it)
      %br/
      = f.password_field :password, autocomplete: "new-password", :class => 'text-field'
      - if @minimum_password_length
        %em
          = @minimum_password_length
          characters minimum
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", :class => 'text-field'
    .field
      = f.label :current_password
      %i (we need your current password to confirm your changes)
      %br/
      = f.password_field :current_password, autocomplete: "current-password", :class => 'text-field'
    .actions
      = f.submit "Update", :class => 'btn-primary'
  .font-serif.mb-2.text-2xl.mt-4 Cancel my account
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn-primary'}
  .my-4= link_to "Back", :back, :class => 'bg-blue-200 p-2'
