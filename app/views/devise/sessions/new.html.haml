.container
  .font-serif.mb-4.text-2xl Log in

  %div.w-80
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", :class => 'text-field'
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password", :class => 'text-field'
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        .my-2= f.submit "Log in", :class => 'btn-primary'
    = render "devise/shared/links"
